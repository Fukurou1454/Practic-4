#include "pch.h"
#include <iostream>
#include "windows.h"

using namespace std;

double *create(int size) //Выделяем память 
{
	double* array = new double[size];
	return array;
}
void fill(double *array, int size)//Заполняем массив 
{
	for (int i = 0; i < size; i++) 
	{
		array[i] = rand() % 100;
	}
}
void print(double *array, int size,int k) //Выводим массив
{
	cout << "Массив "<<k<<":" << endl;
	for (int i = 0; i < size; i++) 
	{
		cout <<  "Элемент " << i+1 << "="<< array[i] <<endl;
	}
	cout << endl;
}
void arrdelete(double *array, int size) //Освобождаем память 
{
	delete[] array;
}

int main()
{
	SetConsoleCP(1251);
	SetConsoleOutputCP(1251);
	system("color 0A");
	int k=1;
	int size;
	cout << "Введите размер массива"<<endl;
	cin >> size;
	while (size > 0)
	{
		double *array = create(size);
		fill(array, size);
		print(array, size,k);
		arrdelete(array, size);
		k++;
		cout << "Введите размер массива" << endl;
		cin >> size;
	}
	system("pause");
	return 0;
}
